  >
<ScrollView
  android:layout_width="fill_parent" android:layout_height="wrap_content"
  >
<LinearLayout
  android:layout_width="fill_parent" android:layout_height="wrap_content"
  >
<ProgressBar 
  android:visibility="gone" android:layout_centerInParent="true"
  style="?android:attr/progressBarStyleSmallTitle"
  android:background="@color/bright" android:id="@+id/progressBar"
  android:layout_width="wrap_content" android:layout_height="wrap_content"
/>
<TextView android:layout_width="wrap_content" 
  android:layout_gravity="center_horizontal"
  android:id="@+id/textbc" android:layout_height="wrap_content"
/>
<TextView android:layout_width="wrap_content" 
  android:id="@+id/textbc2" android:layout_height="wrap_content"
/>
  </LinearLayout>
</ScrollView>
</LinearLayout>
